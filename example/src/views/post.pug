extends main

block css

block body

    .row.bg-title
        .col-lg-3.col-md-4.col-sm-4.col-xs-12
            h4.page-title POST LIST
        // /.col-lg-12
        // /row
    .row
        .col-sm-12
            .white-box
                h3.box-title POSTS
                .table-responsive
                    table#postsTable.table
                        thead
                            th Title
                            th Category
                            th Author
                            th Description
                            th Date
                        tbody
                             each post in posts
                                tr(data-expanded='true')
                                    td 
                                        a(href='posts/detail/'+ post.postId) #{post.title}
                                    td= post.category
                                    td
                                        a(href='users/'+ post.ownerId) #{post.author}
                                    td= post.shortContent
                                    td= post.date
block scripts
    script.
        $('#postTable').DataTable();
        