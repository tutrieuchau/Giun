extends main

block css

block body
    .row.bg-title
        .col-lg-3.col-md-4.col-sm-4.col-xs-12
            h4.page-title POST DETAILS
    .row
        .col-md-8.col-xs-12
            .white-box
                form.form-horizontal.form-material(method='POST',action='/posts',enctype="multipart/form-data")
                    .form-group
                        label.col-md-12 Post Title
                        .col-md-12
                            input.form-control.form-control-line(type='text',name = 'title',value = post.title,placeholder='Title',required)
                    .form-group
                        .col-md-12
                            label(for='sel1') Category
                            select#sel1.form-control(name="category")
                                if post.category == 1
                                    option(value="1" selected) ACCESSORIES
                                else
                                    option(value="1") ACCESSORIES
                                if post.category == 2
                                    option(value="2" selected) BABY AND TOYS
                                else
                                    option(value="2") BABY AND TOYS
                                if post.category == 3
                                    option(value="3" selected) CLOTHS
                                else
                                    option(value="3") CLOTHS
                                if post.category == 4
                                    option(value="4" selected) ELECTRONICS
                                else
                                    option(value="4") ELECTRONICS
                                if post.category == 5
                                    option(value="5" selected) GROCERIES
                                else
                                    option(value="5") GROCERIES
                                if post.category == 6
                                    option(value="6" selected) HOME AND LIVING
                                else
                                    option(value="6") HOME AND LIVING
                                if post.category == 7
                                    option(value="7" selected) PETS
                                else
                                    option(value="7") PETS
                                if post.category == 8
                                    option(value="8" selected) OTHERS
                                else
                                    option(value="8") OTHERS
                    if users
                        .form-group
                            .col-md-12
                                label(for='sel1') User
                                select#sel2.form-control(name="ownerId")
                                    each u in users
                                        option(value=u.id) #{u.name}
                    else
                        .form-group
                            .col-md-12
                                input.form-control.form-control-line(type="text" name="ownerId",style="display:none",value=user.id)
                    .form-group
                        label.col-md-12 Description
                        .col-md-12
                            textarea.form-control.form-control-line(name='description',rows='10',required) #{post.description}
        
                    .form-group
                        #hiddenField.col-sm-12
                            input#actionType.form-control.form-control-line(type='text',name='type',value=type,style='display:none')
                            input#actionType.form-control.form-control-line(type='text',name='postId',value=post.postId,style='display:none')
                            input#postFile.form-control.form-control-line(type="file",name="postImages",style="display:none",accept="image/*",multiple)
                            input#deleteMedia.form-control.form-control-line(type="text",name="deleteMedia",style="display:none")
                            
                    .form-group
                        .col-sm-4
                            button#btnAction.btn.btn-success Update Post
                        if users || type =='edit'
                            .col-sm-4
                                a.btn.btn-success(href='/posts') Cancel
                        else
                            .col-sm-4
                                a.btn.btn-success(href='/users/'+user.id) Cancel
                    .form-group
                        label.col-md-12 Comments
                        each comment in post.comments
                            .col-md-12.comment-bg(id=comment.no)
                                .col-md-3
                                    img.comment-avatar.img-circle(src=comment.user.avatarLink, alt='img')
                                    label
                                        a(href='/users/'+ comment.user.id,style="margin-left:4px") #{comment.user.name}
                                .col-md-7(style="margin-top: 8px")
                                    p(data-editable,title=comment.no)=comment.comment
                                .col-md-1.dropdown(style="margin-top: 8px")
                                    i.fa.fa-ellipsis-h.dropdown-toggle( style="margin-left:10px,font-size:20px",title=comment.no,data-toggle="dropdown")
                                    //- button.btn.btn-success.dropdown-toggle(type="button" data-toggle="dropdown") toggle
                                    ul.dropdown-menu
                                        li
                                            a Edit
                                        li
                                            a Delete
                        .col-md-12(style="margin:15px 0px 15px 0px")
                            input.form-control.form-control-line(type="text",onkeyup="onPressEnterInComment(this,event)",onkeypress ="return event.keyCode != 13",placeholder="Add a comment")

        .col-md-4.col-xs-12
            .white-box
                .user-bg
                    img(width='100%', alt='user', src=user.avatarLink)
                    .overlay-box
                        .user-content
                            a(href='javascript:void(0)')
                            img.thumb-lg.img-circle(src=user.avatarLink, alt='img')
                            h4.text-white #{user.name}
                            h5.text-white #{user.email}
                .user-btm-box
                    .col-md-12.col-sm-12.text-center
                        h5 #{user.slogan}
            .white-box.col-md-12
                h3.box-title MEDIA
                .col-md-12.col-sm-12
                    .form-group
                        button#postFileBtn.btn.btn-success.col-md-5(type="button") Add Media
                        p#postDisplay.col-md-6(style ="margin-top:5px")
                each image in postImages
                    .col-md-6.col-sm-12.post-media-wrap
                        img.post-media(src=image.imageLink,id=image.imageName,title="Click to delete")
block scripts
    script.
        $( document ).ready(function() {
            if($('#actionType').val() == 'add'){
                document.getElementById('btnAction').innerText = 'Add Post';
                $("#postBox").hide();
            }
            $("#postFileBtn").click(()=>{
                $("#postFile").click();
            });
            $("#postFile").on("change",()=>{
                var files = document.getElementById('postFile').files;
                document.getElementById('postDisplay').innerHTML = "Select " + files.length + " files"; 
            });
            $(".post-media-wrap").click((element)=>{
               let elem = document.getElementById(element.target.id);
               elem.parentNode.removeChild(elem);
               //deleteMedia
               $("#deleteMedia").val($("#deleteMedia").val() + ","+element.target.id);       
            });
            $(".comment-delete").click(element=>{
                let elem = document.getElementById(element.target.title);
                elem.style.display = "none";
                $("#hiddenField").append('<input name="deleteComment[]" style="display:none" value="'+element.target.title+'"/>');
            });
            $('body').on('click', '[data-editable]', function(){
  
                var $el = $(this);
                            
                var $input = $('<input onkeypress="return event.keyCode != 13;" />').val( $el.text() );
                $el.replaceWith( $input );
                
                var save = function(){
                    var $p = $('<p data-editable title="'+$el.context.title+'"/>').text( $input.val() );
                    $input.replaceWith( $p );
                    if($("#edit"+$el.context.title).val()){
                        document.getElementById("edit"+$el.context.title).val($input.val());
                    }else{
                        $("#hiddenField").append('<input style="display:none" id="edit'+$el.context.title+'" type="text" name="editComment[]" value ="'+$el.context.title+"::"+ $input.val() +'"/>');
                    }
                };
                $input.one('blur', save).focus();
                
            });
            
        });
        function onPressEnterInComment(element,event){
            if(event.keyCode == 13){
                 $("#hiddenField").append('<input style="display:none" type="text" name="addComment[]" value ="'+element.vale()+'"/>');
            }
        }